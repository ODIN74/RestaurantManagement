@model Microsoft.AspNetCore.Identity.IdentityRole

<div class="modal fade" id="roleDelete" tabindex="-1" role="dialog" aria-labelledby="modal-notification" aria-hidden="true">
    <div class="modal-dialog modal-danger modal-dialog-centered" role="document">
        <div class="modal-content bg-gradient-danger">
        	
            <div class="modal-header">
                <h6 class="modal-title" id="modal-title-notification">Удаление пользователя</h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            
            <div class="modal-body">
            	
                <div class="py-3 text-center">
                    <i class="ni ni-bell-55 ni-3x"></i>
                    <h4 class="heading mt-4">Удаление роли пользователя @Model.Name!</h4>
                    <p>Вы уверенны, что хотите удалить данную  роль пользователя?</p>
                </div>
                
            </div>
            
            <div class="modal-footer">
                <form type="hidden" action="DeleteRole">
                    <input type="hidden" asp-for="@Model.Id"/>
                </form>
                <button type="button" class="btn btn-white" data-save="modal">Удалить</button>
                <button type="button" class="btn btn-link text-white ml-auto" data-dismiss="modal">Отменить</button>
            </div>
            
        </div>
    </div>
</div>
