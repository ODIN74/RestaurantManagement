@model RestaurantManagement.Models.Users.UserProfileEditModel

    <div class="header pb-6 d-flex align-items-center" style="min-height: 500px; background-image: url(~/img/theme/profile-cover.jpg); background-size: cover; background-position: center top;">
        <!-- Mask -->
        <span class="mask bg-gradient-default opacity-8"></span>
        <!-- Header container -->
        <div class="container-fluid d-flex align-items-center">
            <div class="row">
                <div class="col-lg-7 col-md-10">
                    <h1 class="display-2 text-white">Привет @Model.UserName</h1>
                    <p class="text-white mt-0 mb-5">Это страница твоего профиля. Здесь ты можешь указать дополнительную информацию о себе</p>
                    <button type="submit" form="profileForm" class="btn btn-neutral">Сохранить изменения</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Page content -->
    <div class="container-fluid mt--6">
        <div class="row">
            <div class="col-xl-12 order-xl-1">
                <div class="card bg-default shadow">
                    <div class="card-header bg-default">
                        <div class="row align-items-center">
                            <div class="col-8">
                                <h3 class="mb-0 text-white">Профиль</h3>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <form id="profileForm" method="post" asp-action="Edit">
                            <h6 class="heading-small text-white mb-4">Информация о пользователе</h6>
                            <div class="pl-lg-4">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-username">Имя пользователя</label>
                                            <input type="hidden" asp-for="Id" value="@Model.Id"/>
                                            <input type="hidden" asp-for="UserId" value="@Model.UserId"/>
                                            <input type="text" id="input-username" class="form-control" placeholder="Имя пользователя" asp-for="UserName" value="@Model.UserName">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-email">Email</label>
                                            <input type="email" id="input-email" class="form-control" placeholder="jesse@example.com" asp-for="Email" value="@Model.Email">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-first-name">Имя</label>
                                            <input type="text" id="input-first-name" class="form-control" placeholder="Имя" asp-for="FirstName" value="@Model.FirstName">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-last-name">Фамилия</label>
                                            <input type="text" id="input-last-name" class="form-control" placeholder="Фамилия" asp-for="LastName" value="@Model.LastName">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr class="my-4" />
                            <!-- Address -->
                            <h6 class="heading-small text-white mb-4">Контактная информация</h6>
                            <div class="pl-lg-4">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-address">Адрес</label>
                                            <input id="input-address" class="form-control" placeholder="Домашний адрес" asp-for="Address" value="@Model.Address" type="text">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-city">Город</label>
                                            <input type="text" id="input-city" class="form-control" placeholder="Город" asp-for="City" value="@Model.City">
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-phone">Телефон</label>
                                            <input type="text" id="input-phone" class="form-control" placeholder="Телефон" asp-for="PhoneNumber" value="@Model.PhoneNumber">
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-postal-code">Почтовый индекс</label>
                                            <input type="number" id="input-postal-code" class="form-control" placeholder="Почтовый индекс" asp-for="PostalCode" value="@Model.PostalCode">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr class="my-4" />
                            <!-- Description -->
                            <h6 class="heading-small text-white mb-4">Обо мне</h6>
                            <div class="pl-lg-4">
                                <div class="form-group">
                                    <label class="form-control-label">Обо мне</label>
                                    <textarea rows="4" class="form-control" placeholder="Немного о себе ..." asp-for="AboutMe" value="@Model.AboutMe"></textarea>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
